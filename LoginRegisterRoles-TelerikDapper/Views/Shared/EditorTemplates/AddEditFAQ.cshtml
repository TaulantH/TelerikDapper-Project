@using Kendo.Mvc.UI
@model LoginRegisterRoles_TelerikDapper.Models.FAQ
@{
    Layout = null;
}

@Html.HiddenFor(i => i.Id)
<div class="form-group">
    <label for="Question">Question</label>
    @(Html.Kendo().TextBoxFor(model => model.Question).HtmlAttributes(new { @class = "form-control" }))
</div>

<div class="form-group">
    <label for="Answer">Answer</label>
    @(Html.Kendo().EditorFor(model => model.Answer).HtmlAttributes(new { style = "height:300px" }))
</div>
